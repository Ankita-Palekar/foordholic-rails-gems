<div class="profile-container navbar-spacer"> 
	<div class="row">
		<div class="span3"> 
			<div class="image-div">
				<img src='<%= @user.avatar.url() %>' class="img-polaroid" style="width:100%; max-width:150px;" />
			</div>
  	</div>
		<div class="span9">
			<h1><%= @user.name %></h1>

			<div class="information">
				<div>
					<h3 class="inline"><%= @recipe_list.count %></h3>
					<button class="btn btn-success inline">
						Recipes created
					</button>
				</div>
			</div>

		</div>
	</div>
	<div class="row">
		<div class="span12">
			<h3 class="page-header">Recent Created Recipes</h3>
			<%= render :template => '/common/recipe_list' %>
		</div>
		
	</div>
</div>